<style>
	header {
		align-items: baseline;
		background: var(--color-gray-100);
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		padding: 1rem;
	}

	footer {
		font-size: 0.75rem;
		padding: 3rem 5% 2rem;
	}

	footer p {
		display: flex;
		flex-wrap: wrap;
		gap: 1.5rem;
		justify-content: center;
	}

	footer a {
		color: var(--color-gray-600);
		display: block;
	}

	@media (min-width: 400px) {
		header {
			flex-direction: row;
		}
	}
</style>
